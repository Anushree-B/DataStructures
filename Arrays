#Maximum and minimum of an array using minimum number of comparisons
# declaring empty array
arr = []
min=10000
max=0

flag=True

#accepting array elements from user
while(flag):
    elm=int(input("enter element: "))
    arr.append(elm)
    ch=int(input("do you want to enter more elements? (0-no/1-yes)" ))
    if ch == 0:
        flag=False
    
#checking for minimum and maximum element
for i in arr:
    if i < min:
        min=i
    if i > max:
        max=i

#printing the output
print("Minimum element is: ",min)
print("Maximum element is: ",max)
        
